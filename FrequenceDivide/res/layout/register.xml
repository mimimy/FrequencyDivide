<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <TextView
            android:textColor="#000000"
        android:id="@+id/tvTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="注册"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:textColor="#000000"
            android:id="@+id/tvUsername_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户账号："
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edtUserName_register"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="#DEE7E7"
            android:hint="请输入用户账号"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:textColor="#000000"
            android:id="@+id/tvPassword_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用戶密码："
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edtPassWord_register"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="#DEE7E7"
            android:hint="请输入用户密码"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:textColor="#000000"
            android:id="@+id/tvRepassword_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重复密码："
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edtRePassWord_register"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="#DEE7E7"
            android:hint="请输入用户密码"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:textColor="#000000"
            android:id="@+id/tvRealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名："
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edtRealName"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="#DEE7E7"
            android:hint="请输入用户姓名"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:textColor="#000000"
            android:id="@+id/tvSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="选择性别："
            android:textSize="15dp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rdbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:checked="true"
                android:text="男" />

            <RadioButton
                android:id="@+id/rdbFeMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/edtContact"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/tvContact"
            android:background="#DEE7E7"
            android:hint="请输入联系方式"
            android:phoneNumber="true"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvContact"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="联系方式："
            android:textSize="15dp" />
    </RelativeLayout>
<LinearLayout 
    android:layout_height="150dp"
    android:layout_width="match_parent"
     android:layout_marginTop="10dp"  
    android:gravity="center"
    >

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_items"
        android:text="提交"
        android:textColor="#ffffff" />
    
</LinearLayout>


</LinearLayout>